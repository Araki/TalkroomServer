<h1>Listing lists</h1>

<table>
  <tr>
  	<th>ID</th>
    <th>入会経路</th>
    <th>UID</th>
    <th>FB Name</th>
    <th>メールアドレス</th>
    <th>アイコンURL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
  	<td><%= list.id %></td>
    <td><%= list.channel %></td>
    <td><%= list.fb_uid %></td>
    <td><%= list.fb_name %></td>
    <td><%= truncate(list.email, { :length => 20 }) %></td>
    <td><%= truncate(list.profile_image1, { :length => 20 })  %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

